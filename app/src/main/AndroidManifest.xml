<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChillCup02UI"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:replace="android:networkSecurityConfig,android:usesCleartextTraffic"
        >
        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />

        <!-- Cart Activity -->
        <activity
            android:name=".ui.cart.CartActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />
        
        <!-- Checkout Activity (mock checkout flow) -->
        <activity
            android:name=".ui.checkout.CheckoutActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />

        <!-- VNPay gateway simulator -->
        <activity
            android:name=".ui.payment.VnPayGatewayActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />

        <!-- VietQR payment screen -->
        <activity
            android:name=".ui.payment.VietQrPaymentActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />

        <!-- Order detail screen -->
        <activity
            android:name=".ui.orders.OrderDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />
        
        <!-- Order tracking screen -->
        <activity
            android:name=".ui.orders.OrderTrackingActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />
        
        <!-- Login Activity -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ChillCup02UI" />
        
        <!-- Test Google Login Activity - Activity để test đăng nhập Google với Firebase -->
        <activity
            android:name=".auth.TestGoogleLoginActivity"
            android:exported="false"
            android:label="Test Google Login" />
    </application>

</manifest>
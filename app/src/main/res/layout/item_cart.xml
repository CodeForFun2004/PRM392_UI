<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- product image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="product image"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/bg_image_rounded" />

        <!-- main text block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trà Quế Mật Ong"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvProductCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món Nóng"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47.200 đ"
                android:layout_marginTop="8dp"
                android:textColor="#000"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- qty controls and trash -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="#333"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="0dp"
                android:background="@drawable/bg_qty_button"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="0dp"
                android:background="@drawable/bg_qty_button_green"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btnTrash"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="@null"
                android:layout_marginStart="12dp"
                android:tint="#9E9E9E" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

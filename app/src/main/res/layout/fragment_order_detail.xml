<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header / Order info -->
        <TextView
            android:id="@+id/tvDetailOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORD-1001"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/11/2025 • 10:00"
            android:textSize="12sp"
            android:textColor="#8E8E93"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_status_badge"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDetailDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 30-40 mins"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Items list -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Món đã đặt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/llItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <!-- Summary -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tóm tắt đơn hàng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Tạm tính" android:textColor="#8E8E93"/>
                <TextView android:id="@+id/tvSubtotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 đ" android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Phí giao hàng" android:textColor="#8E8E93"/>
                <TextView android:id="@+id/tvDelivery" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 đ" android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Giảm giá" android:textColor="#8E8E93"/>
                <TextView android:id="@+id/tvDiscount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 đ" android:textColor="#000"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E5EA" android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Tổng cộng" android:textStyle="bold" android:textColor="#000"/>
                <TextView android:id="@+id/tvTotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 đ" android:textStyle="bold" android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Payment -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp">

            <TextView android:id="@+id/tvPaymentMethod" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="COD" android:textColor="#000" />

        </LinearLayout>

        <!-- Delivery info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery" 
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp">

            <TextView android:id="@+id/tvAddress" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="123 Main Street" android:textColor="#000" />
            <TextView android:id="@+id/tvPhone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="+84900000000" android:textColor="#8E8E93" android:layout_marginTop="6dp"/>

            <!-- Call/Refund buttons removed per design request -->

        </LinearLayout>

        <!-- Actions: only Track button centered -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnTrack"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Track"
                android:background="@drawable/bg_button_pink"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
